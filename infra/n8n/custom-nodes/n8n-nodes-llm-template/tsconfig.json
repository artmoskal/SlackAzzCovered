{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2021"],
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "."
  },
  "include": ["nodes/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}